<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>fxproperty</artifactId>
        <groupId>org.fxproperty</groupId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <packaging>jar</packaging>
    <artifactId>javac</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.fxproperty</groupId>
            <artifactId>api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.fxproperty</groupId>
            <artifactId>tck</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
            <version>${javafx-base.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${junit-jupiter.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.google.testing.compile</groupId>
            <artifactId>compile-testing</artifactId>
            <version>${compile-testing.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>${maven-enforcer-plugin.version}</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${build-helper-maven-plugin.version}</version>
            </plugin>
            <!-- todo define in parent -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>bundle-tck-target-jar</id>
<!--                        <phase>generate-test-resources</phase>-->
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.fxproperty</groupId>
                                    <artifactId>api</artifactId>
<!--                                    <classifier>tck-target</classifier>-->
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.testOutputDirectory}</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
<!--                    <fork>true</fork>-->
                    <forceJavacCompilerUse>true</forceJavacCompilerUse>
<!--                    <testIncludes>-->
<!--                        <testInclude>**/org/fxproperty/**/*.java</testInclude>-->
<!--                    </testIncludes>-->
<!--                    <testExcludes>-->
<!--                        <testExclude>**/module-info.java</testExclude>-->
<!--                    </testExcludes>-->
                    <compilerArgs>
                        <arg>--add-exports</arg>
                        <arg>jdk.compiler/com.sun.tools.javac.code=org.fxproperty.javac</arg>
                        <arg>--add-exports</arg>
                        <arg>jdk.compiler/com.sun.tools.javac.model=org.fxproperty.javac</arg>
                        <arg>--add-exports</arg>
                        <arg>jdk.compiler/com.sun.tools.javac.processing=org.fxproperty.javac</arg>
                        <arg>--add-exports</arg>
                        <arg>jdk.compiler/com.sun.tools.javac.tree=org.fxproperty.javac</arg>
                        <arg>--add-exports</arg>
                        <arg>jdk.compiler/com.sun.tools.javac.util=org.fxproperty.javac</arg>
                        <arg>--add-exports</arg>
                        <arg>jdk.compiler/com.sun.tools.javac.comp=org.fxproperty.javac</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven-resources-plugin.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>${maven-install-plugin.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${maven-surefire-plugin.version}</version>
                <configuration>
                    <excludes>
<!--                        <exclude>**/JavacTests.java</exclude>-->
                        <exclude>**/*IntegrationTest.java</exclude>
                        <exclude>**/*IntegrationTests.java</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <id>integration-test</id>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <phase>integration-test</phase>
                        <configuration>
                            <excludes>
                                <exclude>none</exclude>
                            </excludes>
                            <includes>
<!--                                <include>**/JavacTests.java</include>-->
                                <include>**/*IntegrationTest.java</include>
                                <include>**/*IntegrationTests.java</include>
                            </includes>
                            <failIfNoTests>true</failIfNoTests>
                            <systemPropertyVariables>
                                <!-- can be looked up by name -->
<!--                                <api-jar>/api-${project.version}-tck-target.jar</api-jar>-->
                                <api-jar>/api-${project.version}.jar</api-jar>
                            </systemPropertyVariables>
                            <useModulePath>true</useModulePath>
<!--                            <argLine>&#45;&#45;add-opens org.fxproperty.tck/org.fxproperty.tck=org.fxproperty.javac &#45;&#45;add-opens org.fxproperty.api/org.fxproperty.api=org.fxproperty.javac &#45;&#45;add-opens jdk.compiler/com.sun.tools.javac.tree=org.fxproperty.javac &#45;&#45;add-opens jdk.compiler/com.sun.tools.javac.processing=org.fxproperty.javac &#45;&#45;add-opens jdk.compiler/com.sun.tools.javac.util=org.fxproperty.javac &#45;&#45;add-opens jdk.compiler/com.sun.tools.javac.code=org.fxproperty.javac &#45;&#45;add-opens jdk.compiler/com.sun.tools.javac.model=org.fxproperty.javac &#45;&#45;add-opens jdk.compiler/com.sun.tools.javac.comp=org.fxproperty.javac</argLine>-->
                            <argLine>--add-exports jdk.compiler/com.sun.tools.javac.code=org.fxproperty.javac,ALL-UNNAMED --add-exports jdk.compiler/com.sun.tools.javac.model=org.fxproperty.javac --add-exports jdk.compiler/com.sun.tools.javac.processing=org.fxproperty.javac --add-exports jdk.compiler/com.sun.tools.javac.tree=org.fxproperty.javac --add-exports jdk.compiler/com.sun.tools.javac.util=org.fxproperty.javac --add-exports jdk.compiler/com.sun.tools.javac.comp=org.fxproperty.javac --add-opens org.fxproperty.tck/org.fxproperty.tck=org.fxproperty.javac --add-opens org.fxproperty.api/org.fxproperty.api=org.fxproperty.javac --add-opens jdk.compiler/com.sun.tools.javac.tree=org.fxproperty.javac --add-opens jdk.compiler/com.sun.tools.javac.processing=org.fxproperty.javac --add-opens jdk.compiler/com.sun.tools.javac.util=org.fxproperty.javac --add-opens jdk.compiler/com.sun.tools.javac.code=org.fxproperty.javac --add-opens jdk.compiler/com.sun.tools.javac.model=org.fxproperty.javac --add-opens jdk.compiler/com.sun.tools.javac.comp=org.fxproperty.javac</argLine>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${maven-failsafe-plugin.version}</version>
            </plugin>
        </plugins>
    </build>

</project>